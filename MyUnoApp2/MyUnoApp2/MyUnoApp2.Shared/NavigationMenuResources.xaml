            </NavigationViewItem.Icon>

            <NavigationViewItem.Content>
                <TextBlock x:Uid="SideMenu_MobileWebsite"
                           Text="Mobile Website" />
            </NavigationViewItem.Content>
        </af:CommandAwareNavigationViewItem>
    </DataTemplate>

    <selectors:NavigationViewItemTemplateSelector x:Key="NavigationViewItemTemplateSelector"
                                                  OverviewTemplate="{StaticResource OverviewNavigationItemTemplate}"
                                                  MessagingTemplate="{StaticResource MessagingNavigationItemTemplate}"
                                                  StatementsAndDocumentsTemplate="{StaticResource StatementsAndDocumentsNavigationItemTemplate}"
                                                  FinancialPlanTemplate="{StaticResource FinancialPlanNavigationItemTemplate}"
                                                  NetWorthTemplate="{StaticResource NetWorthNavigationItemTemplate}"
                                                  GoalsTemplate="{StaticResource GoalsNavigationItemTemplate}"
                                                  ResourcesTemplate="{StaticResource ResourcesNavigationItemTemplate}"
                                                  ChatTemplate="{StaticResource ChatNavigationItemTemplate}"
                                                  SeparatorTemplate="{StaticResource NavigationItemSeparator}"
                                                  MobileWebsiteTemplate="{StaticResource MobileWebsiteNavigationItemTemplate}" />
</ResourceDictionary>
