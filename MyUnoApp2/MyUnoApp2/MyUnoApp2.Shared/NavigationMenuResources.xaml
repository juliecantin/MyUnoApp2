    <!-- GOALS NAVIGATION ITEM -->
    <DataTemplate x:Key="GoalsNavigationItemTemplate">
        <af:CommandAwareNavigationViewItem NavigationCommand="{Binding Parent[SelectNavigationItem]}">
            <NavigationViewItem.Icon>
                <PathIcon Data="M9.4 2L9 0H0V17H2V10H7.6L8 12H15V2H9.4Z" />
            </NavigationViewItem.Icon>
            <NavigationViewItem.Content>
                <TextBlock x:Uid="SideMenu_Goals"
                           Text="Goals" />
            </NavigationViewItem.Content>
        </af:CommandAwareNavigationViewItem>
    </DataTemplate>

    <!-- RESOURCES NAVIGATION ITEM -->
    <DataTemplate x:Key="ResourcesNavigationItemTemplate">
        <af:CommandAwareNavigationViewItem NavigationCommand="{Binding Parent[SelectNavigationItem]}">
            <NavigationViewItem.Icon>
                <PathIcon Data="M12 0H2C0.9 0 0.0100002 0.9 0.0100002 2L0 18L7 15L14 18V2C14 0.9 13.1 0 12 0Z" />
            </NavigationViewItem.Icon>
            <NavigationViewItem.Content>
                <TextBlock x:Uid="SideMenu_Resources"
                           Text="Resources" />
            </NavigationViewItem.Content>
        </af:CommandAwareNavigationViewItem>
    </DataTemplate>

    <!-- CHAT NAVIGATION ITEM -->
    <DataTemplate x:Key="ChatNavigationItemTemplate">
        <af:CommandAwareNavigationViewItem NavigationCommand="{Binding Parent[SelectNavigationItem]}">
            <NavigationViewItem.Icon>
                <PathIcon Data="M18 0H2C0.9 0 0 0.9 0 2V20L4 16H18C19.1 16 20 15.1 20 14V2C20 0.9 19.1 0 18 0Z" />
            </NavigationViewItem.Icon>

            <NavigationViewItem.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Uid="SideMenu_Chat"
                               Text="Chat"
                               Grid.Column="0" />
                </Grid>
            </NavigationViewItem.Content>
        </af:CommandAwareNavigationViewItem>
    </DataTemplate>

    <!-- MOBILE WEBSITE NAVIGATION ITEM-->
    <DataTemplate x:Key="MobileWebsiteNavigationItemTemplate">
        <af:CommandAwareNavigationViewItem NavigationCommand="{Binding Parent[SelectNavigationItem]}">
            <NavigationViewItem.Icon>
