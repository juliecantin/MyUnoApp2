<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:af="using:MyUnoApp2"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:selectors="using:MyUnoApp2"
                    xmlns:uloc="http://nventive.com/localization/1.0"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:android="http://nventive.com/xamarin"
                    mc:Ignorable="uloc android">

    <DataTemplate x:Key="NavigationItemSeparator">
        <NavigationViewItemSeparator Opacity="0" />
    </DataTemplate>

    <!-- OVERVIEW NAVIGATION ITEM -->
    <DataTemplate x:Key="OverviewNavigationItemTemplate">
        <af:CommandAwareNavigationViewItem NavigationCommand="{Binding Parent[SelectNavigationItem]}">
            <NavigationViewItem.Icon>
                <PathIcon Data="M0 10H8V0H0V10ZM0 18H8V12H0V18ZM10 18H18V8H10V18ZM10 0V6H18V0H10Z" />
            </NavigationViewItem.Icon>
            <NavigationViewItem.Content>
                <TextBlock x:Uid="SideMenu_Overview"
                           Text="Overview"
                           Foreground="Red"/>
            </NavigationViewItem.Content>
        </af:CommandAwareNavigationViewItem>
    </DataTemplate>

    <!-- MESSAGES NAVIGATION ITEM -->
    <DataTemplate x:Key="MessagingNavigationItemTemplate">
        <af:CommandAwareNavigationViewItem NavigationCommand="{Binding Parent[SelectNavigationItem]}">
            <NavigationViewItem.Icon>
                <PathIcon Data="M18 0H2C0.9 0 0.00999999 0.9 0.00999999 2L0 14C0 15.1 0.9 16 2 16H18C19.1 16 20 15.1 20 14V2C20 0.9 19.1 0 18 0ZM18 4L10 9L2 4V2L10 7L18 2V4Z" />
            </NavigationViewItem.Icon>

            <NavigationViewItem.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Uid="SideMenu_Messages"
                               Text="Message"
                               Grid.Column="0" />
                </Grid>
            </NavigationViewItem.Content>
        </af:CommandAwareNavigationViewItem>
    </DataTemplate>

    <!-- STATEMENT AND DOCUMENTS NAVIGATION ITEM -->
    <DataTemplate x:Key="StatementsAndDocumentsNavigationItemTemplate">
        <af:CommandAwareNavigationViewItem NavigationCommand="{Binding Parent[SelectNavigationItem]}">
            <NavigationViewItem.Icon>
                <PathIcon Data="M14 0H2C0.9 0 0 0.9 0 2V16H2V2H14V0ZM13 4L19 10V20C19 21.1 18.1 22 17 22H5.99C4.89 22 4 21.1 4 20L4.01 6C4.01 4.9 4.9 4 6 4H13ZM12 11H17.5L12 5.5V11Z" />
            </NavigationViewItem.Icon>
            <NavigationViewItem.Content>
                <TextBlock x:Uid="SideMenu_StatementsAndDocuments"
                           Text="Statements and Documents" />
            </NavigationViewItem.Content>
        </af:CommandAwareNavigationViewItem>
    </DataTemplate>

