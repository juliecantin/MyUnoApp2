<Page x:Class="MyUnoApp2.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MyUnoApp2"
      xmlns:uloc="http://nventive.com/localization/1.0"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:android="http://uno.ui/android"
      mc:Ignorable="d uloc android">

    <Page.Resources>
        <android:Style TargetType="local:SwipeRefresh">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:SwipeRefresh">
                        <Grid>
                            <local:AndroidNativeSwipeRefresh />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </android:Style>
    </Page.Resources>

    <Grid DataContext="Hello">
        <local:SwipeRefresh>
            <local:SwipeRefresh.Content>
                <TextBlock Text="{Binding}" />
            </local:SwipeRefresh.Content>
        </local:SwipeRefresh>
    </Grid>
</Page>
