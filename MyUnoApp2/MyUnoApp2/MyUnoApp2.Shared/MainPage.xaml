<Page x:Class="MyUnoApp2.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MyUnoApp2"
      xmlns:uloc="http://nventive.com/localization/1.0"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d uloc">

    <Grid>
        <ScrollViewer x:Name="ScrollViewer">
            <StackPanel>
                <Rectangle x:Name="BeforeHeader"
                           Height="500"
                           HorizontalAlignment="Stretch"
                           Fill="Yellow"
                           Margin="0,0,0,10"/>

                <!--Non-sticky header-->
                <Rectangle Height="50"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Top"
                           Fill="Green"/>

                <Rectangle Height="500"
                           HorizontalAlignment="Stretch"
                           Fill="Orange"
                           Margin="0,10,0,0" />

                <Rectangle Height="500"
                           HorizontalAlignment="Stretch"
                           Fill="OrangeRed"
                           Margin="0,10,0,0"  />

                <Rectangle Height="500"
                           HorizontalAlignment="Stretch"
                           Fill="Red"
                           Margin="0,10,0,0"  />
            </StackPanel>
        </ScrollViewer>
        
        <!--Sticky header-->
        <Rectangle Height="50"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Fill="Green"
                   Opacity="0"
                   IsHitTestVisible="False"
                   local:StickyScrollingBehavior.StickAfterThis="{Binding ElementName=BeforeHeader}"
                   local:StickyScrollingBehavior.IsEnabled="true" />
    </Grid>
</Page>
